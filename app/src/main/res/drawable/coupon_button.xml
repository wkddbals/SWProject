<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#61FF00" /> <!-- 눌렸을 때 버튼의 색 -->
            <stroke android:color="#61FF00" android:width="5dp" /> <!-- 테두리의 색과 두께 -->
            <corners android:radius="8dp" /> <!-- 버튼의 모서리 둥글기 설정 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 기본 버튼의 색 -->
            <stroke android:color="#61FF00" android:width="5dp" /> <!-- 테두리의 색과 두께 -->
            <corners android:radius="20dp" /> <!-- 버튼의 모서리 둥글기 설정 -->
        </shape>
    </item>
</selector>
